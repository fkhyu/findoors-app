{
  "expo": {
    "name": "OtaMapSF",  
    "slug": "findoors",
    "version": "0.2.2",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "findoors",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "fi.otamaps.sf",
      "buildNumber": "109",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "BackgroundModes": [
          "location"
        ],
        "NSLocationWhenInUseUsageDescription": "Show current location on map and scan for beacons.",
        "NSBluetoothAlwaysUsageDescription": "This app uses Bluetooth to scan for beacons.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app uses location services to show your current location on the map and scan for beacons even when the app is in the background."
      }
    }, 
    "android": {
      "edgeToEdgeEnabled": true,
      "versionCode": 20,
      "package": "fi.otamaps.sf",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "BLUETOOTH_SCAN",
        "BLUETOOTH_CONNECT",
        "ACCESS_BACKGROUND_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your neighbors."
        }
      ],
      [
        "@rnmapbox/maps",
        {
          "accessToken": "pk.eyJ1Ijoib25yZWMiLCJhIjoiY21hbnR4ZHhvMDAxMDJpc2RhN3puNnI0byJ9.uh_ot8HPgdRD4WicKeGpNQ"
        }
      ],
      [
        "expo-dev-client",
        {
          "launchMode": "most-recent"
        }
      ],
      "expo-localization",
      [
        "react-native-ble-plx",
        {
          "androidAlwaysRequestPermission": true,
          "isBackgroundEnabled": true
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Show current location on map and share to others when you so wish.",
          "isIosBackgroundLocationEnabled": true,
          "isAndroidBackgroundLocationEnabled": true
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#000000",
          "iosDisplayInForeground": true,
          "notificationCategories": [
            {
              "identifier": "findoors",
              "actions": [
                {
                  "identifier": "open",
                  "buttonTitle": "Open",
                  "foreground": true
                }
              ]
            }
          ]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "406c269a-6e78-43d5-a400-98d3f627f15b"
      }
    },
    "owner": "otamaps"
  }
}
